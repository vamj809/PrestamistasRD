<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agregar préstamo</title>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            margin: 0;
            padding: 0;
        }
        .form{
            margin-top: 30px;
            margin-left: 30px;
        }
        .form input[type=text],input[type=number]{
            font-size: 1.3em;
        }
        .btn{
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 10px;
            background-color: #063950;
            border-radius: 20px;
            color:white;
            border:none;
            cursor: pointer;
            font-size: 1.5em;
        }
    </style>
</head>

<body>
    <%- include("partials/header.ejs") %>
        <form action="/add-loan" method="POST" class="form">
            <div>
                <label for="clientId">Id del cliente:</label>
                <input type="text" placeholder="Id del cliente" name="clientId" required>
            </div>
            <br>
            <div>
                <label for="amount">Monto:</label>
                <input type="number" placeholder="Monto" name="amount" required>
            </div>
            <br>
            <div>
                <label for="quotesQty">Cantidad de cuotas:</label>
                <input type="text" placeholder="Cantidad de cuotas" name="quotesQty" required>
            </div>
            <br>
            <div>
                <label">Interes:</label>
                <input style="width: 100px;" type="number" min="0" max="1" placeholder="Interes" name="interest" required>
            </div>
            <br>
            <input type="submit" value="Agregar préstamo" class="btn">
        </form>
        <%- include("partials/return-to-page.ejs") %>
</body>

</html>